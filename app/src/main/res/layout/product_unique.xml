<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:gravity="center"
        android:layout_width="160dp"
        android:orientation="vertical"
        android:layout_height="230dp">

        <ImageView
            android:layout_width="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mobile22"
            android:id="@+id/imgUnique"
            android:layout_height="130dp" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/titleUnique"
            android:text="Samsung Galaxy S7 Edge"
            android:textColor="#302f2f"
            android:layout_height="20dp" />
        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:background="#807f7f"
            android:layout_height="1dp" />
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:text="23000000"
            android:id="@+id/priceUnique"
            android:textColor="#317fc3"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>